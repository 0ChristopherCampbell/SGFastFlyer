@{
    ViewBag.Title = "Email Quote";
}
@model SGFastFlyers.Models.EmailQuotes
<h2>Email Quote</h2>
<h2>@ViewBag.Message</h2>

 @using (Html.BeginForm("EmailQuote","Home",FormMethod.Post,
                        new
                        {
                            enctype = "multipart/form-data"
                        }))
    {
        @Html.AntiForgeryToken()
<div class="container col-md-4">

   

    <div class="form-group">

        @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { id = "rcorners1", Placeholder = "First Name" })
        @Html.ValidationMessageFor(model => model.FirstName)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { id = "rcorners1", Placeholder = "Surname" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { id = "rcorners1", Placeholder = "Email" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Subject, htmlAttributes: new { id = "rcorners1", Placeholder = "Subject" })
    </div>
   
    <div class="form-group">
        @Html.TextAreaFor(model => model.Comment, htmlAttributes: new { id = "rcorners2", Placeholder = "Comments" , })
    </div>
    <input type="submit" value="Send" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 text-success">
            @ViewBag.Status
        </div>
    </div>
</div>

    }