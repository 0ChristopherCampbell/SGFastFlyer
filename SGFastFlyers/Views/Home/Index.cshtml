                            </div><!--/ Testimonial carousel end-->


                    </div><!--/ Content row end -->
                </div><!--/ Container end -->
        </div><!--/ Testimonial end -->

    </div>

    <script language="javascript">
        function validatePrintSize() {
            if ($("#HomePageQuoteViewModel_NeedsPrint").is(":checked") && ($("#HomePageQuoteViewModel_PrintSize").val() == "0" ||
                $("#HomePageQuoteViewModel_PrintSize").val() == "")) {
                $('#PrintSize-error').css("display", "block");
                $('#PrintSize-error').css("padding-left", "190px");
                $('#PrintSize-error').text("Choose DL (99mm × 210mm, 1/3 A4) or A5 (148mm X 210mm, 1/2 A4). For other sizes please contact us for a quote.");
                return false;
            } else {
                $('#PrintSize-error').css("padding-left", "0");
                $('#PrintSize-error').css("display", "none");
                $("#PrintSize-error").text("");
                return true;
            }
        }

        $(document).ready(function () {
            var $form = $('form');

            //Email Quote Button:
            $("#emailQuote").bind('click', function (e) {
                if ($form.valid()) {
                    if (!validatePrintSize()) {
                        return false;
                    }
                } else {
                    if (!validatePrintSize()) {
                        return false;
                    }
                }
                $("#hdnorderNow").val("");
                $("#hdnemailQuote").val("Email your quote");
                $form.submit();
            });

            //Order Now Button:
            $("#orderNow").bind('click', function (e) {
                if ($form.valid()) {
                    if (!validatePrintSize()) {
                        return false;
                    }
                } else {
                    if (!validatePrintSize()) {
                        return false;
                    }
                }
                $("#hdnemailQuote").val("");
                $("#hdnorderNow").val("Order Now");
                $form.submit();
            });
        });
    </script>
}


